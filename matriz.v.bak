module matriz(
	input clock,
	input [7:0] linha,
	input [8:0] coluna,
	input escrever_na_matriz
	input [7:0] byte_entrada,
	input seletor_memoria,
	output [7:0] byte,
);


wire [7:0] pixel_imagem_original;
wire [7:0] pixel_imagem_segunda_memoria;

wire [16:0] endereco_pixel = linha * 320 + coluna;

wire [7:0] pixels0;
wire [7:0] pixels1;

wire leitura = ~escrita;

ram_nova ram0 (
		 .address(endereco_pixel),  
		 .clock(clock),
		 .data(8'h00),              
		 .rden(1'b1),               
		 .wren(1'b0),               
		 .q(pixels0)                 
	);

ram_nova ram1 (
		 .address(endereco_pixel),  
		 .clock(clock),
		 .data(8'h00),              
		 .rden(1'b1),               
		 .wren(1'b0),               
		 .q(pixels1)                 
);

	reg [7:0] pixels;
	always @(*) begin
		 if (select_mem == 1'b0)
			  pixels = pixels0;
		 else
			  pixels = pixels1;
	end
	
endmodule